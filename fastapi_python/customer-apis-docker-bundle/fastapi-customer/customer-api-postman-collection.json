{
  "info": {
    "name": "Customer API (FastAPI)",
    "_postman_id": "69a0b9aa-3f18-4d9e-a213-7a5bcdbe1e77",
    "description": "Postman collection for the Customer API demo with Bearer auth and ETag flow.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List customers",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/customers",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "customers"
          ]
        }
      }
    },
    {
      "name": "Create customer",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"first_name\": \"Ada\", \"last_name\": \"Lovelace\", \"email\": \"ada@example.com\"}"
        },
        "url": {
          "raw": "{{base_url}}/customers",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "customers"
          ]
        }
      }
    },
    {
      "name": "Get customer by id",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/customers/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "customers",
            "1"
          ]
        }
      }
    },
    {
      "name": "Replace customer (If-Match ETag)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "If-Match",
            "value": "{{etag}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"first_name\": \"Ada\", \"last_name\": \"Byron\", \"email\": \"ada@example.com\"}"
        },
        "url": {
          "raw": "{{base_url}}/customers/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "customers",
            "1"
          ]
        }
      }
    },
    {
      "name": "Delete customer",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/customers/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "customers",
            "1"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": "REPLACE_WITH_JWT"
    },
    {
      "key": "etag",
      "value": "REPLACE_WITH_ETAG"
    }
  ]
}